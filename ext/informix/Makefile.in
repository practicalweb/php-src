DEPTH     = ../..
topsrcdir = @topsrcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@

LTLIBRARY_NAME    = libinformix.la
LTLIBRARY_SOURCES = ifx.c
LTLIBRARY_LIBADD  = $(IFX_LIBS)
CLEANFILES        = ifx.c

include $(topsrcdir)/build/ltlib.mk

ifx.c: $(srcdir)/ifx.ec
	(if test -d $(INFORMIXDIR); then \
	   esql -e $(IFX_ESQL_FLAGS) $(srcdir)/ifx.ec; \
	 else \
	   touch ifx.c; \
	 fi)

